    "@vitest/coverage-v8": "4.0.18",
    "glob": "^13.0.1",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "lefthook": "^2.1.0",
    "react-cosmos": "^6.2.3",
    "react-cosmos-plugin-vite": "^6.2.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vitest": "^4.0.18"
  }
