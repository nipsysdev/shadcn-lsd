{
  "name": "@nipsys/shadcn-lsd",
  "description": "@nipsys/shadcn-lsd is a UI component library based on the Logos Design System",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.2.3",
  "type": "module",
  "module": "./dist/main.js",
  "exports": {
    ".": "./dist/main.js",
    "./css": "./dist/assets/style.css"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/main.d.ts",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nipsysdev/shadcn-lsd.git"
  },
  "author": "Xavier Saliniere <bonjour@xaviers.sh>",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10"
  },
  "scripts": {
    "cosmos": "cosmos",
    "cosmos-export": "cosmos-export && touch ./docs/.nojekyll && cp CNAME ./docs/",
    "cosmos-preview": "pnpm dlx http-server ./docs",
    "build": "tsc -p tsconfig.json && vite build --mode lib",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
